.back-link
    display: inline-block;
    margin: 1rem 0;

    &:hover
        text-decoration: underline;

.basket
    display: flex;
    justify-content: space-between;
    margin-bottom: rel-size(60px);
    flex-wrap: wrap;

.basket-products
    width: calc(100% - 600px);

    +below(1560px)
        width: calc(100% - 440px);

    +below(1320px)
        width: 100%;
        margin-bottom: rel-size(40px);

    &__head
        display: flex;
        justify-content: space-between;
        margin-bottom: rel-size(60px);
        height: rel-size(30px);

        +below(580px)
            flex-direction: column;
            height: initial;
            margin-bottom: 0;

    &__head-title
    &__remove-products
        font-family: 'Comfortaa', sans-serif;
        font-style: normal;
        font-weight: bold;
        font-size: rel-size(24px);
        line-height: rel-size(27px);
        color: #3A3A3A;

        +below(580px)
            margin-bottom: rel-size(30px);

    &__remove-products
        color: #FF1D1D;
        cursor: pointer;

        &:hover
            text-decoration: underline;

    &__product
        background: #F9F9F9;
        padding: rel-size(65px) rel-size(40px);
        margin-bottom: rel-size(40px);
        transition: transform 0.5s, opacity 0.5s;

        &.remove
            transform: translate(0,-50%);
            opacity: 0;

        +below(1440px)
            padding: rel-size(45px) rel-size(20px);

    &__head-row
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;

        +below(768px)
            justify-content: center;

    &__product-image
        width: rel-size(100px);
        height: @width;

        +below(768px)
            margin-bottom: rel-size(30px);

        img
            display: block;
            max-width: 100%;
            max-height: 100%;

    &__product-title
        font-family: 'Montserrat', sans-serif;
        font-style: normal;
        font-weight: bold;
        font-size: rel-size(24px);
        line-height: rel-size(26px);
        color: #3A3A3A;
        padding-right: rel-size(20px);

        +below(768px)
            width: 100%;
            text-align: center;
            margin-bottom: rel-size(30px);

    &__product-num
        display: inline-flex;
        flex-direction: row;
        align-items: center;
        flex-wrap: nowrap;

        +below(768px)
            width: 100%;
            justify-content: center;
            margin-bottom: rel-size(30px);
            flex-wrap: wrap;

    &__product-size
        margin-right: rel-size(20px);
        font-family: 'Montserrat', sans-serif;
        font-style: normal;
        font-weight: bold;
        font-size: rel-size(24px);
        line-height: rel-size(26px);
        color: #3A3A3A;
        white-space: nowrap;

        +below(768px)
            width: 100%;
            text-align: center;
            margin-bottom: rel-size(20px);
            margin-right: 0;

    &__product-num-change
        margin: 0 rel-size(10px);
        color: #FF1D1D;
        cursor: pointer;
        user-select: none;

        +below(768px)
            font-size: rel-size(40px);
            font-weight: bold;
            padding: 0 rel-size(30px);

    &__product-price
        font-family: 'Montserrat', sans-serif;
        font-style: normal;
        font-weight: bold;
        font-size: rel-size(24px);
        line-height: rel-size(26px);
        color: #3A3A3A;
        white-space: nowrap;

        +below(768px)
            width: 100%;
            text-align: center;
            margin-bottom: rel-size(30px);

    &__product-remove
        width: rel-size(30px);
        height: @width;
        cursor: pointer;
        user-select: none;

        svg
            height: 100%;
            width: auto;

.basket-info
    width: 540px;
    padding-top: rel-size(90px);

    +below(1560px)
        width: 400px;

    +below(1320px)
        width: 100%;
        padding-top: 0;

    &__box
        margin-bottom: rel-size(80px);

    &__title
        font-family: 'Comfortaa', sans-serif;
        font-style: normal;
        font-weight: bold;
        font-size: rel-size(24px);
        line-height: rel-size(27px);
        color: #3A3A3A;
        margin-bottom: rel-size(20px);

    &__text
        font-family: 'Comfortaa', sans-serif;
        font-style: normal;
        font-weight: bold;
        font-size: rel-size(16px);
        line-height: rel-size(32px);
        color: #BCBCBC;
        margin-bottom: rel-size(10px);
