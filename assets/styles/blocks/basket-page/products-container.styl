.back-link
    display: inline-block;
    margin: 1rem 0;

    &:hover
        text-decoration: underline;

.basket
    display: flex;
    justify-content: space-between;

.basket-products
    width: calc(100% - 600px);

    &__head
        display: flex;
        justify-content: space-between;
        margin-bottom: rel-size(60px);
        height: rel-size(30px);

    &__head-title
    &__remove-products
        font-family: 'Comfortaa', sans-serif;
        font-style: normal;
        font-weight: bold;
        font-size: rel-size(24px);
        line-height: rel-size(27px);
        color: #3A3A3A;

    &__remove-products
        color: #FF1D1D;
        cursor: pointer;

    &__product
        background: #F9F9F9;
        padding: rel-size(65px) rel-size(40px);
        margin-bottom: rel-size(40px);

    &__inner
        display: flex;
        justify-content: space-between;

    &__product-title
        font-family: Montserrat;
        font-style: normal;
        font-weight: bold;
        font-size: 24px;
        line-height: 26px;
        color: #3A3A3A;

.basket-info
    width: 540px;
    padding-top: rel-size(90px);

    &__box
        margin-bottom: rel-size(80px);

    &__title
        font-family: 'Comfortaa', sans-serif;
        font-style: normal;
        font-weight: bold;
        font-size: rel-size(24px);
        line-height: rel-size(27px);
        color: #3A3A3A;
        margin-bottom: rel-size(20px);

    &__text
        font-family: 'Comfortaa', sans-serif;
        font-style: normal;
        font-weight: bold;
        font-size: rel-size(16px);
        line-height: rel-size(32px);
        color: #BCBCBC;
        margin-bottom: rel-size(10px);
