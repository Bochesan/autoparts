.footer
    flex: 0 0 auto;
    background: darkbg;
    padding: rel-size(80px) 0;

    &__container
        display: flex;
        justify-content: space-between;

        +below(920px)
            flex-direction: column;
            align-items: center;

    &__col
        width: 20%;
        padding-right: rel-size(25px);

        +below(920px)
            width: 100%;
            text-align: center;
            padding-right: 0;
            margin-bottom: rel-size(30px);

            &:last-child
                margin-bottom: 0;

        .info-line__information
            font-family: Comfortaa;
            font-style: normal;
            font-weight: normal;
            font-size: rel-size(16px);
            line-height: rel-size(25px);
            color: #ACACAC;
            text-align: left;
            width: 100%;
            margin-bottom: rel-size(20px);

            +below(920px)
                text-align: center;

    &__col-title
        font-family: Montserrat;
        font-style: normal;
        font-weight: bold;
        font-size: rel-size(16px);
        line-height: rel-size(18px);
        color: white;
        margin-bottom: rel-size(20px);
        display: block;
        min-height: rel-size(40px);

        +below(920px)
            min-height: initial;

        &:hover
            text-decoration: underline;

    &__col-list
        +below(1180px)
            display: flex;
            flex-wrap: wrap;

        +below(920px)
            display: none;
            align-items: center;

    &__col-item
        padding: 0;

        &:before
            display: none;

    &__col-link
        font-family: Comfortaa;
        font-style: normal;
        font-weight: normal;
        font-size: rel-size(16px);
        line-height: normal;
        color: #ACACAC;

        +below(1180px)
            margin-right: rel-size(15px)

        +below(920px)
            margin: 0;

        &:hover
            text-decoration: underline;

.logo--footer
    color: white;
