.main-menu
    width: calc(100% - 250px);
    display: flex;
    justify-content: center;
    transition: transform 0.5s;
    background: white;
    z-index: 10;
    line-height: normal;

    +below(1180px)
        position: absolute;
        top: 100%;
        left: 0;
        width: 100%;
        z-index: -1;
        transform: translate(0,-100%);

        .main-menu__container
            max-width: 100%;
            padding-left: 4%;
            padding-right: 4%;

    &__container
        display: flex;
        align-items: center;
        justify-content: space-between;
        max-width: rel-size(700px);
        width: 100%;
        margin: 0;

        +below(520px)
            flex-direction: column;

    &__item
        padding-left: 0;

    &__link
        display: inline-block;
        font-family: 'Comfortaa', sans-serif;
        font-style: normal;
        font-weight: normal;
        font-size: rel-size(16px);
        line-height: normal;
        color: #BCBCBC;
        transition: .3s;

        +below(1180px)
            padding: rel-size(10px) 0;

        +below(520px)
            margin-bottom: rel-size(20px);

            &:last-child
                margin-bottom: 0;

        &.is-active
        &:hover
            color: #3A3A3A;


lines-color = #000
width-menu = 2rem
height-menu = 1.2rem
lines-height = height-menu / 8

.menu-button
  display: none;
  cursor pointer
  order: 3;

  +below(1180px)
    display: block;

  &__inner
    position relative
    width width-menu
    height height-menu

  &__line
    width 100%
    height lines-height
    background lines-color
    border-radius 5px
    position absolute
    left 0
    transition top 0.3s 0.4s, bottom 0.3s 0.4s, transform 0.3s, opacity 0.1s 0.3s

    &--1
      top 0
      transform translateY(-50%)

    &--2
      top 50%
      transform translateY(-50%)

    &--3
      top 100%
      transform translateY(-50%)

  &.opened

    & .menu-button__line
      transition top 0.3s, bottom 0.3s, transform 0.3s 0.3s, opacity 0.1s 0.3s

      &--1
        top 50%
        transform rotate(45deg)

      &--2
        opacity 0

      &--3
        top 50%
        transform rotate(-45deg)

#menu-button.opened ~ .main-menu
        transform: translate(0,0);
