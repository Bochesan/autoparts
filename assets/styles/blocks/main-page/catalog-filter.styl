.catalog-filter
    display: flex;
    justify-content: space-between;
    margin-bottom: rel-size(30px);
    padding: 0 rel-size(20px);

    &__col
        font-family: Comfortaa, sans-serif;
        font-style: normal;
        font-weight: bold;
        font-size: rel-size(24px);
        line-height: normal;
        color: #BCBCBC;

        &.is-active
            color: #3A3A3A;

    &__col-1
        width: rel-size(300px);

    &__col-2
        width: rel-size(150px);
        text-align: center;

    &__col-3
        width: rel-size(150px);
        text-align: center;

    &__col-4
        width: rel-size(470px);
