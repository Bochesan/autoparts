.catalog-filter
    display: flex;
    justify-content: space-between;
    margin-bottom: rel-size(30px);
    padding: 0 rel-size(20px);

    &__col
        font-family: Comfortaa, sans-serif;
        font-style: normal;
        font-weight: bold;
        font-size: rel-size(24px);
        line-height: normal;
        color: #BCBCBC;

        &.is-active
            color: #3A3A3A;

    &__col-1
        width: calc(100% - 45rem);

        +below(1520px)
            width: calc(100% - 37rem);

    &__col-2
        width: 7.5rem;
        text-align: center;

    &__col-3
        width: 7.5rem;
        text-align: center;

    &__col-4
        width: 22rem;
