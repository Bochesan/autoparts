.catalog-filter
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    margin-bottom: rel-size(30px);
    padding: 0 rel-size(20px);

    +below(768px)
        margin-bottom: rel-size(10px);

    &__col
        font-family: 'Comfortaa', sans-serif;
        font-style: normal;
        font-weight: bold;
        font-size: rel-size(24px);
        line-height: normal;
        color: #BCBCBC;
        position: relative;

        &-btn
            cursor: pointer;
            position: relative;

            &.is-active
                color: #3A3A3A;

                &.sort-up:after
                    content: '▼';
                    position: absolute;
                    left: 100%;
                    top: 50%;
                    transform: translate(25%,-50%);

                &.sort-down:after
                    content: '▲';
                    position: absolute;
                    left: 100%;
                    top: 50%;
                    transform: translate(25%,-50%);

    &__col-1
        width: calc(100% - 45rem);

        +below(1520px)
            width: calc(100% - 37rem);

        +below(1240px)
            width: calc(100% - 21.5rem);

        +below(768px)
            width: 100%;
            text-align: left;
            margin-bottom: rel-size(10px);

    &__col-2
        width: 7.5rem;
        text-align: center;

        +below(1240px)
            width: 10rem;
            margin-right: 1.5rem;

        +below(768px)
            width: 100%;
            text-align: left;
            margin-right: 0;
            margin-bottom: rel-size(10px);

    &__col-3
        width: 7.5rem;
        text-align: center;

        +below(1240px)
            width: 10rem;

        +below(768px)
            width: 100%;
            text-align: left;
            margin-bottom: rel-size(10px);

    &__col-4
        width: 22rem;

        +below(1240px)
            width: 100%;
            display: flex;
            justify-content: flex-end;

        +below(768px)
            width: 100%;

    &__form
        position: relative;

        +below(1240px)
            width: 100%;
            max-width: 21.5rem;
            margin-top: 15px;

        +below(768px)
            max-width: initial;

        input[type='input']
            display: block;
            width: 100%;
            height: 40px;
            padding-right: 50px;

        input[type='submit']
            display: block;
            position: absolute;
            z-index: 10;
            right: 0;
            top: 0;
            width: 40px;
            height: 40px;
            background: url('/media/images/search.svg') center center no-repeat;
            background-size: 70% auto;
            border: none;
